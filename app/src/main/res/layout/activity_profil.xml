<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".ProfilActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="25dp"
            android:background="@drawable/logo2" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="PAGE PRINCIPALE"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textFontWeight="400"
            android:textSize="18sp"
            android:fontFamily="@font/avenir" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="25dp"
            android:background="@drawable/ic_notifications" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_blue"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/profile_cancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="25dp"
                android:background="@drawable/icon_exit2" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="PROFILE"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textFontWeight="400"
                android:textSize="18sp"
                android:fontFamily="@font/avenir" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="25dp"
                 />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="149dp">


                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_profil" />


                <ImageView
                    android:id="@+id/changePhotoIcon"
                    android:layout_width="245dp"
                    android:layout_height="29dp"
                    android:layout_alignTop="@+id/profileImage"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="-104dp"
                    android:layout_marginLeft="@dimen/cardview_default_elevation"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="24dp"
                    android:layout_toEndOf="@+id/profileImage"
                    android:src="@drawable/ic_pro"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/profileImage"
                    app:layout_constraintRight_toRightOf="@+id/profileImage" />
            </RelativeLayout>

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom complet"
                android:textSize="18sp"
                android:fontFamily="@font/avenir"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/avenir"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Nom complet"
                    android:fontFamily="@font/avenir"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom complet"
                    android:fontFamily="@font/avenir"
                    app:boxStrokeColor="#38B6FF"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Téléphone"
                    android:fontFamily="@font/avenir"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/signup_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Téléphone"
                    android:fontFamily="@font/avenir"
                    app:boxStrokeColor="#38B6FF"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:inputType="phone" />
            </LinearLayout>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="247dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:text="Enregistrer"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:backgroundTintMode="src_over"
                app:rippleColor="@null"
                tools:ignore="TouchTargetSizeCheck" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>