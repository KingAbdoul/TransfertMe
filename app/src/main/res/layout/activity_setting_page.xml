<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3F51B5"
    tools:context=".SettingPage">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/ImageView30"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/back_btn"
      android:padding="14dp"/>


  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="ParamÃ¨tres"
      android:textColor="@color/white"
      android:textSize="18sp"
      android:textStyle="bold" />
</RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="680dp"
      android:orientation="vertical">

    <ImageView
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:id="@+id/profileImg"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_corner"/>

    <TextView
        android:id="@+id/signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modifprofil"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_back_second_100"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Modifier le profil"
        android:textAllCaps="false"
        android:textColor="@color/black"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:background="@drawable/round_black_white10_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/nightModeIcon1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_send_24"
        android:background="@drawable/round_black_night_mode"
        android:padding="9dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="68dp"
          android:layout_centerVertical="true"
          android:text="Partager l'application"
          android:textColor="@color/black"
          android:textStyle="bold"/>

      <ImageView
          android:id="@+id/ImageViewsend"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/baseline_arrow_right_24"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"/>


    </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/round_black_white10_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="15dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nightModeIcon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_privacy_tip_24"
            android:background="@drawable/round_back_second_100"
            android:padding="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_centerVertical="true"
            android:text="Faq"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ImageViewfaqread"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_right_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
      </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_black_white10_2"
        android:orientation="vertical"
        android:padding="15dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nightModeIcon4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_black_w"
            android:padding="9dp"
            android:src="@drawable/baseline_contact_support_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="68dp"
            android:text="Contactez-nous"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageViewhelpme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_right_24" />
      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_black_white10_2"
        android:orientation="vertical"
        android:padding="15dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nightModeIcon10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_black_secutity"
            android:padding="9dp"
            android:src="@drawable/float_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="68dp"
            android:text="Annuler un transfert"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageViewhelpme10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_arrow_right_24" />
      </RelativeLayout>

    </LinearLayout>

  </LinearLayout>

  </LinearLayout>
