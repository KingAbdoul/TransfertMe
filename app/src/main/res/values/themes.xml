<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème d'application de base. -->
    <style name="Theme.TransfertMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Thème d'application de base. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Couleur secondaire de la marque. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Couleur de la barre d'état. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Personnalisez votre thème ici. -->
    </style>

    <style name="nightModeSwitch"  parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>


</resources>